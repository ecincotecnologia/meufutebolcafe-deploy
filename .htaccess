<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Se o arquivo ou diretório existir, não redireciona
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Caso contrário, redireciona tudo para index.html
    RewriteRule ^ index.html [L]
</IfModule>